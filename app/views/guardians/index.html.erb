<div class="body-content">
  <h1>All Guardians</h1>

  <div id="guardians">
    <table>
      <tbody>
      <% @guardians.each do |guardian| %>
        <tr>
          <td><%= render guardian %></td>
          <td><%= link_to "Show", guardian, class: "btn btn-primary mx-1" %> <%= link_to "Edit", edit_guardian_path(guardian), class: "btn btn-primary mx-1" %></td>
          <td><%= button_to "Delete", guardian, method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger mx-2" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>